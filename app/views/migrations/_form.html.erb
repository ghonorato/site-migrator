<%= form_for @migration, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :from_addres, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :from_addres, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :to_address, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :to_address, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  migrations_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
