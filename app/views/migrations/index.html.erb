<%- model_class = Migration -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name('current_site.url') %></th>
      <th><%= model_class.human_attribute_name('new_address.url') %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @migrations.each do |migration| %>
      <tr>
        <td><%= migration.id %></td>
        <td><%= migration.name %></td>
        <td><%= migration.current_site.url %></td>
        <td><%= migration.new_site.url %></td>
        <td><%=l migration.created_at, format: :long %></td>
        <td>
          <%= link_to migration_path(migration), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
          <%= link_to 'recrawl', migration_start_crawl_path(migration), method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_migration_path,
            class: 'btn btn-primary' %>
