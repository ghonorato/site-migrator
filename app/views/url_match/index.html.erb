<div class="row">
  <div class="col-md-12">
    <h1 class="page-header">Step 2</h1>
    <% if @migration.matching_redirects? %>
      <h2>Redirect match</h2>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>From</th>
              <th>To</th>
            </tr>
          </thead>
          <tbody>
            <% @resources.each do |r| %>
              <tr>
                <td><%= r.url %></td>
                <td><%= r.match_suggestion %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="lead"><i class="fa fa-spinner fa-pulse fa-2x fa-fw"></i>Fetching URLs contents. It may take a while, please be patient...</p>
    <% end %>
  </div>
</div>